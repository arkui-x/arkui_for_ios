      "$ace_root:ace_config",
      ":capability_config",
    ]

    cflags_objc = [
      "-fvisibility=default",
      "-fobjc-arc",
      "-fobjc-weak",
      "-O0",
    ]

    cflags_objcc = cflags_objc

    sources = [
      # text_input
      "$ace_root/adapter/ios/capability/editing/text_input_client_handler.cpp",
