foreach(item, ace_platforms) {
  platform = item.name
  if (platform == "ios") {
    ace_capability_ios_source_set("ace_capability_ios") {
      defines = []
      config = {
      }

      if (defined(item.config)) {
        config = item.config
      }
      if (defined(config.defines)) {
        defines = config.defines
      }
    }
  }
}
